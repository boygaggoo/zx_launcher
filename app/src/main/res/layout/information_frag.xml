<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="horizontal"
    android:id="@+id/id_info_frag_view">
    <TextView
        android:id="@+id/id_exception_weather"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:textSize="@dimen/dimen_weather_text_size"
        android:textColor="@color/weather_text_color"
        android:background="@drawable/home_info_bg"
        android:visibility="gone"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/id_weather_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/home_info_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_weather_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="上海"
            android:layout_marginTop="10dp"
            android:textColor="@color/weather_text_color"
            android:textSize="@dimen/dimen_weather_city_text_size" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- 白天天气 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_day_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/string_home_day_weather"
                    android:textColor="@color/weather_text_color"
                    android:textSize="@dimen/dimen_weather_time_text_size"/>
                <ImageView
                    android:id="@+id/id_day_weather_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/id_day_weather_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/weather_text_color"
                    android:textSize="@dimen/dimen_weather_text_size"/>
            </LinearLayout>
            <!-- 夜间天气 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/id_night_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/string_home_night_weather"
                    android:textColor="@color/weather_text_color"
                    android:textSize="@dimen/dimen_weather_time_text_size"/>
                <ImageView
                    android:id="@+id/id_night_weather_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/id_night_weather_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/weather_text_color"
                    android:textSize="@dimen/dimen_weather_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/id_logo_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:src="@drawable/qrcode"
        android:background="@drawable/home_info_bg"
        android:orientation="vertical"
        android:visibility="gone"/>
</LinearLayout>